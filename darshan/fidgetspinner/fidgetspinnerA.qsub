cd ${PBS_O_WORKDIR}

# make sure scratch dir exists
SCRATCHDIR=/eagle/projects/ATPESC2024/usr/$USER
mkdir -p $SCRATCHDIR

# delete old file if present
rm -rf $SCRATCHDIR/fidgetspinnerA*

# submit job
aprun -n 128 -N 32 ./fidgetspinnerA $SCRATCHDIR
